@model EntityLayer.Concrete.Content
@{
    ViewBag.Title = "AddContent";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h2>İçerik Girişi</h2>


@using (Html.BeginForm("AddContent", "WriterPanelContent", FormMethod.Post))
{
    <div class="form-group">
        <input type="hidden" name="HeadingID" value="@ViewBag.deger" />
        <br />
        @Html.Label("İçeriğinizi Yazın")
        @Html.TextAreaFor(r => r.ContentValue,4,30, new { @class = "form-control" })
        @Html.ValidationMessageFor(r => r.ContentValue)
   

        <button class="btn btn-outline-info">Kaydet</button>

    </div>
}
